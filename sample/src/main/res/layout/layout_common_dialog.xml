<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:paddingTop="30dp">

    <TextView
        android:id="@id/common_dialog_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:textColor="#333333"
        android:textSize="18sp"
        android:textStyle="bold"
        tools:text="This is a title." />

    <TextView
        android:id="@id/common_dialog_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:lineSpacingExtra="8dp"
        android:paddingLeft="22dp"
        android:paddingTop="14dp"
        android:paddingRight="22dp"
        android:textColor="#555555"
        android:textSize="15sp"
        tools:text="This is the content;" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#F1F1F1"
        android:layout_marginTop="30dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:orientation="horizontal">

        <TextView
            android:id="@id/common_dialog_negative"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:foreground="?android:attr/selectableItemBackground"
            android:gravity="center"
            android:textColor="#555555"
            android:textSize="17sp"
            android:textStyle="bold"
            tools:text="NEGATIVE BUTTON" />

        <View
            android:id="@+id/common_dialog_negative_positive_divider"
            android:layout_width="1px"
            android:layout_height="match_parent"
            android:background="#F1F1F1" />

        <TextView
            android:id="@id/common_dialog_positive"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:foreground="?android:attr/selectableItemBackground"
            android:gravity="center"
            android:textColor="#00C8C8"
            android:textSize="17sp"
            android:textStyle="bold"
            tools:text="POSITIVE BUTTON" />
    </LinearLayout>

</LinearLayout>
